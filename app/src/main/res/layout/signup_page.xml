<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey200"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".signup_page">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="What's Your email"
        android:textColor="#D6D6D6"
        android:textSize="22dp">

    </TextView>

    <EditText
        android:id="@+id/iemail"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/emailuser"
        android:hint="Enter Email Id"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/grey200"
        android:textSize="22dp">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="6dp"
        android:paddingLeft="22dp"
        android:text="Create Username"
        android:textColor="#D6D6D6"
        android:textSize="22dp">

    </TextView>

    <EditText
        android:id="@+id/iusername"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/emailuser"
        android:hint="Enter UserName"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/grey200"
        android:textSize="22dp">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="6dp"
        android:paddingLeft="22dp"
        android:text="Enter Date of birth"
        android:textColor="#D6D6D6"
        android:textSize="22dp">

    </TextView>

    <EditText
        android:id="@+id/edtdob"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/emailuser"
        android:hint="Date of birth"
        android:textAlignment="textEnd"
        android:inputType="datetime"
        android:paddingRight="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/grey200"
        android:textSize="22dp">

    </EditText>


    <ImageButton
        android:id="@+id/idatebirth"
        android:layout_width="53dp"
        android:layout_height="56dp"
        android:layout_marginTop="-81dp"
        android:layout_marginLeft="-133dp"
        android:background="@drawable/calendar"></ImageButton>

    <androidx.appcompat.widget.AppCompatButton
        android:onClick="Nextbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/login_btn"
        android:text="Next"
        android:textAllCaps="false">

    </androidx.appcompat.widget.AppCompatButton>


</LinearLayout>