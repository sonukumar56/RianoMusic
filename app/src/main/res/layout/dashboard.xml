<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pulse, Heart Rate, and Blood Pressure"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/pulse_rate_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pulse Rate: "
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:paddingTop="16dp"/>

    <SeekBar
        android:id="@+id/pulse_rate_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="200"
        android:progress="80"/>

    <TextView
        android:id="@+id/heart_rate_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Heart Rate: "
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:paddingTop="16dp"/>

    <SeekBar
        android:id="@+id/heart_rate_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="200"
        android:progress="60"/>

    <TextView
        android:id="@+id/blood_pressure_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blood Pressure: "
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:paddingTop="16dp"/>

    <SeekBar
        android:id="@+id/blood_pressure_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="200"
        android:progress="120"/>

    <Button
        android:id="@+id/logoutbtn"
        android:layout_width="160dp"
        android:layout_height="59dp"
        android:text="Logout"
        android:textSize="15dp"
        ></Button>

</LinearLayout>
